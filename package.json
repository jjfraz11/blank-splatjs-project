{
  "name": "blank-splatjs-project",
  "version": "0.0.0",
  "description": "Blank SplatJS Project",
  "main": "index.js",
  "private": true,
  "dependencies": {
    "splatjs": "^3.0.0"
  },
  "devDependencies": {
    "browserify": "^4.1.8",
    "jshint": "^2.5.1"
  },
  "scripts": {
    "lint-js": "bash -c \"jshint game.js\"",
    "build-js": "browserify game.js -o index.js",
    "build": "npm run lint-js && npm run build-js"
  },
  "author": "What?! ",
  "license": "MIT",
  "jshintConfig": {
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "forin": true,
    "freeze": true,
    "immed": true,
    "indent": 4,
    "latedef": "nofunc",
    "newcap": true,
    "noarg": true,
    "noempty": true,
    "nonbsp": true,
    "nonew": true,
    "quotmark": "double",
    "unused": "strict",
    "trailing": true,
    "browser": true,
    "devel": true,
    "globalstrict": true,
    "globals": {
      "module": false,
      "require": false
    }
  }
}
